{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "allowJs": true,
    "types": ["node"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/cli.mts"],
  "exclude": ["dist"]
}
