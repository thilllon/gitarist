{
  "name": "gitarist",
  "version": "0.0.20",
  "description": "A CLI tool to utilize Octokit",
  "license": "MIT",
  "packageManager": "pnpm@7.18.1",
  "repository": "git@github.com:thilllon/gitarist.git",
  "homepage": "https://github.com/thilllon/gitarist#readme",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/thilllon/gitarist/issues"
  },
  "contributors": [
    "thilllon <thilllon970@gmail.com>"
  ],
  "author": {
    "name": "thilllon",
    "email": "thilllon970@gmail.com",
    "url": "https://github.com/thilllon"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "gitarist": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx ./src/dev.ts",
    "build:tsc": "tsc",
    "build": "tsup",
    "start": "node ./dist/index.js",
    "format": "prettier --write --list-different .",
    "release": "pnpm format && pnpm lint && pnpm test && pnpm build && release-it",
    "lint": "eslint --fix .",
    "test": "jest",
    "prepare": "husky install && chmod +x .husky/*"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true
  },
  "lint-staged": {
    "./**/src/**/*": [
      "prettier -w -l",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  },
  "dependencies": {
    "chalk": "4",
    "commander": "^9.4.1",
    "dotenv": "^16.0.3",
    "fast-glob": "^3.2.12",
    "octokit": "^2.0.10",
    "octokit-plugin-create-pull-request": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@jest/globals": "^29.3.1",
    "@octokit/core": "^4.1.0",
    "@octokit/request-error": "^3.0.2",
    "@octokit/types": "^8.0.0",
    "@octokit/webhooks": "^10.3.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.13",
    "@types/yargs": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "commitizen": "^4.2.6",
    "commitlint": "^17.3.0",
    "eslint": "^8.29.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "release-it": "^15.5.1",
    "ts-jest": "^29.0.3",
    "tsup": "^6.5.0",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4"
  },
  "funding": [
    {
      "type": "github",
      "url": "http://github.com/thilllon"
    },
    {
      "type": "ko_fi",
      "url": "https://ko-fi.com/thilllon"
    }
  ]
}
